<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MelodyHub 2.0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #0f172a;
            color: #f8fafc;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #020617 !important;
            border-bottom: 2px solid #1e293b;
            padding: 1rem 0;
        }

        .navbar-brand {
            font-size: 1.6rem;
            letter-spacing: -1px;
            color: #38bdf8 !important;
        }

        .nav-link {
            color: #cbd5e1 !important;
            font-weight: 500;
            transition: 0.3s;
            margin: 0 10px;
        }

            .nav-link:hover {
                color: #38bdf8 !important;
            }

        .content-wrapper {
            flex: 1;
        }

        footer {
            background-color: #020617;
            border-top: 2px solid #1e293b;
            color: #64748b;
            padding: 2rem 0;
        }

        .card {
            background-color: #1e293b !important;
            border: 1px solid #334155;
            color: white;
        }

        input.form-control {
            background-color: #0f172a !important;
            border: 1px solid #334155;
            color: white !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow-2xl">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-music-note-beamed"></i> MelodyHub 2.0
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-lg-5">
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-info" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> НАЧАЛО
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-info" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-shop"></i> КАТАЛОГ
                            </a>
                        </li>
                    </ul>
                    <div class="auth-section">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted mt-auto">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <span class="text-white fw-bold">MelodyHub 2.0</span>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-info">Поверителност</a>
                    &copy; 2026
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>